rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;  // Explicitly deny all writes by default
    }

    match /property-images/{imageId} {
      allow read: if true;  // Public read access for property images
      allow write: if request.auth != null  // User must be authenticated
                  && request.resource.size < 5 * 1024 * 1024  // 5MB size limit
                  && request.resource.contentType.matches('image/.*')  // Must be an image
                  && request.method == 'POST'  // Allow uploads
                  && request.resource.contentType in ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];  // Specific allowed types
    }
  }
}